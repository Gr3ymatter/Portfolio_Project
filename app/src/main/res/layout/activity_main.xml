<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_gravity="center"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/main_linearlayout">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps"
        android:id="@+id/title_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/spotify_button"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        style="@style/udacious_orange_button"
        android:onClick="spotify_click"
        />

    <Button
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/scores_button"
        style="@style/udacious_orange_button"
        android:layout_centerHorizontal="true"
        android:onClick="scores_click"/>

    <Button
        style="@style/udacious_orange_button"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/library_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="library_click"/>

    <Button
        style="@style/udacious_orange_button"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:id="@+id/build_button"
        android:layout_centerHorizontal="true"
        android:onClick="bigger_click"
        />

    <Button
        style="@style/udacious_orange_button"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/reader_button"
        android:onClick="xyz_click"
        />

    <Button
        style="@style/udacious_red_button"
        android:layout_height="wrap_content"
        android:text="Captone Project"
        android:id="@+id/capstone_button"
        android:onClick="capstone_click"
 />

</LinearLayout>
